---
interface Props {
  title: string;
  description: string;
  technologies: string[];
  imageUrl: string;
  projectUrl?: string;
  githubUrl?: string;
}

const { title, description, technologies, imageUrl, projectUrl, githubUrl } = Astro.props;
---

<article class="project-card">
  <div class="image-container">
    <img src={imageUrl} alt={title} />
  </div>
  <div class="content">
    <h2>{title}</h2>
    <p class="description">{description}</p>
    <div class="technologies">
      {technologies.map((tech) => (
        <span class="tech-tag">{tech}</span>
      ))}
    </div>
    <div class="links">
      {projectUrl && (
        <a href={projectUrl} class="link" target="_blank" rel="noopener noreferrer">
          View Project
        </a>
      )}
      {githubUrl && (
        <a href={githubUrl} class="link" target="_blank" rel="noopener noreferrer">
          GitHub
        </a>
      )}
    </div>
  </div>
</article>

<style>
  .project-card {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: transform 0.2s;
  }

  .project-card:hover {
    transform: translateY(-4px);
  }

  .image-container {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .project-card:hover .image-container img {
    transform: scale(1.05);
  }

  .content {
    padding: 1.5rem;
  }

  h2 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--text-color);
  }

  .description {
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tech-tag {
    background: #e2e8f0;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.875rem;
    color: #4a5568;
  }

  .links {
    display: flex;
    gap: 1rem;
  }

  .link {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.2s;
  }

  .link:first-child {
    background: var(--primary-color);
    color: white;
  }

  .link:first-child:hover {
    background: #2c5282;
  }

  .link:last-child {
    background: #e2e8f0;
    color: #4a5568;
  }

  .link:last-child:hover {
    background: #cbd5e0;
  }
</style>